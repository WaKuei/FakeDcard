<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:id="@+id/Ltitle"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Lexcerpt"
        android:layout_alignEnd="@+id/Lexcerpt"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="310dp"
        android:layout_height="53dp"
        android:id="@+id/Lexcerpt"
        android:textSize="11dp"
        android:textColor="#e73d3d3d"
        android:layout_below="@+id/Ltitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imageView"
        android:src="@drawable/good"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_below="@+id/Lexcerpt"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imageView2"
        android:src="@drawable/word"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignBottom="@+id/LlikeCount"
        android:layout_alignRight="@+id/Lexcerpt"
        android:layout_alignEnd="@+id/Lexcerpt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/LlikeCount"
        android:textSize="15dp"
        android:textColor="#e73d3d3d"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/LcommentCount"
        android:textSize="15dp"
        android:textColor="#e73d3d3d"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/Lgender"
        android:layout_alignTop="@+id/Lexcerpt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LforumName"
        android:textColor="#e7abaaaa"
        android:layout_below="@+id/Lexcerpt"
        android:layout_toRightOf="@+id/Lgender"
        android:layout_toEndOf="@+id/Lgender"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>